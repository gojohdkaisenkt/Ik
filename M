infoLabel.Size = UDim2.new(0, 200, 0, 40)
infoLabel.Position = UDim2.new(0, 10, 1, -90)  -- g√≥c tr√°i d∆∞·ªõi
infoLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
